<h2>Novo Pedido</h2>

<%= form_with model: @order, local: true do |f| %>
  <div>
    <%= f.label :pickup_address, "Endereço de coleta" %><br>
    <%= f.text_field :pickup_address %>
    <%= field_error(@order, :pickup_address)%>
  </div>

  <div>
    <%= f.label :delivery_address, "Endereço de entrega" %><br>
    <%= f.text_field :delivery_address %>
    <%= field_error(@order, :delivery_address)%>
  </div>

  <div>
    <%= f.label :items_description, "Descrição dos itens" %><br>
    <%= f.text_area :items_description %>
    <%= field_error(@order, :items_description)%>
  </div>

  <div>
    <%= f.label :estimated_price, "Valor estimado (R$)" %><br>
    <%= f.number_field :estimated_price, step: 0.01, min: 0.01 %>
    <%= field_error(@order, :estimated_price)%>
  </div>


  <%= f.submit "Criar Pedido" %>

  <div style="margin-top: 20px;">
    <%= link_to "← Voltar ao menu principal", root_path, class: "btn" %><br>
    <%= link_to "📦 Meus Pedidos", orders_path, class: "btn" %>
    <%= link_to "🔍 Buscar pedidos por ID de usuário", by_user_orders_path, class: "btn" %>
  </div>

<% end %>
