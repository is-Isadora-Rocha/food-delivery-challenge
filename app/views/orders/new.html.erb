<h2>Novo Pedido</h2>

<%= form_with model: @order, local: true do |f| %>
  <div>
    <%= f.label :pickup_address, "Endereço de coleta" %><br>
    <%= f.text_field :pickup_address %>
  </div>

  <div>
    <%= f.label :delivery_address, "Endereço de entrega" %><br>
    <%= f.text_field :delivery_address %>
  </div>

  <div>
    <%= f.label :items_description, "Descrição dos itens" %><br>
    <%= f.text_area :items_description %>
  </div>

  <div>
    <%= f.label :estimated_value, "Valor estimado (R$)" %><br>
    <%= f.number_field :estimated_price, step: 0.01, min: 0.01 %>
  </div>

  <% if @order.errors.any? %>
  <div style="color: red;">
    <h4><%= pluralize(@order.errors.count, "erro") %> impediram o salvamento do pedido:</h4>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.submit "Criar Pedido" %>
<% end %>
